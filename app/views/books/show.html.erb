<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/info', user: @user, book: @bookn %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, size:'40x40', fallback: "no_image.jpg" %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
           <td><%= @book.body %></td>
           <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger", data: { confirm: '削除しますか？' } %>
            </td>
           <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
